<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css/top_bar.css">
  <title>통합 페이지</title>
</head>

<body>
  <div class="top-bar" id="topBar">
    <div class="logo">
      <a href="/">
        <img src="/images/ku.png" alt="KU">
      </a>
    </div>
    <div class="navigation">
      <div class="navigation1">
        <a href="/">홈</a>
        <a href="/notice_list">공지사항</a>
        <a href="/ku_list">팀 구하기</a>
      </div>
      <div class="navigation2">
        <a href="/contest_list">공모전</a>
        <a href="/qna">QnA</a>
        <% if (typeof user !== 'undefined') { %>
          <% if ( user.is_superuser === 1){ %>
            <a href="/report_list">신고받은 글</a>
          <% } %>
        <% } %>
      </div>
    </div>
    <div class="user-info">
      <% if (typeof user !== 'undefined') { %>
        <% if (user) { %>
          <span><a href="/my_page?userId=<%= user.user_id %>"><span id="userId"><%= user.user_id %></span></a>님 반갑습니다</span>
          <a href="/login/logout">로그아웃</a>
        <% } else { %>
          <a href="/login">로그인</a>
        <% }%>
      <% } else { %>
        <a href="/login">로그인</a>
      <% } %>
    </div>
    
    <div class="chatting-container">
      <span id="emoji-button" onclick="toggleChatList()">🧐</span>
    </div>
  </div>

  <div id="chatting-container">
    <div id="sidebar">
      <h3>채팅 목록</h3>
      <ul id="chat-list">
        <li class="chat-item" onclick="showChatWindow('friend1')">친구 1</li>
        <li class="chat-item" onclick="showChatWindow('friend2')">친구 2</li>
        <li class="chat-item" onclick="showChatWindow('friend3')">친구 3</li>
        <li class="chat-item" onclick="showChatWindow('friend4')">친구 4</li>
        <li class="chat-item" onclick="showChatWindow('friend5')">친구 5</li>
        <li class="chat-item" onclick="showChatWindow('friend6')">친구 6</li>
        <li class="chat-item" onclick="showChatWindow('friend7')">친구 7</li>
        <li class="chat-item" onclick="showChatWindow('friend8')">친구 8</li>
        <li class="chat-item" onclick="showChatWindow('friend9')">친구 9</li>
      </ul>
    </div>

     <div id="chat-window" class="resizable draggable">
      <div id="chat-box">
        <div class="chat-bubble user-message">
          <p>안녕하세요!</p>
        </div>
        <div class="chat-bubble friend-message">
          <p>안녕하세요! 어떻게 지내세요?</p>
        </div>
        <div class="chat-bubble user-message">
          <p>잘 지내고 있어요.</p>
        </div>
        <div class="chat-bubble friend-message">
          <p>잘 지내고 있어서 다행이에요.</p>
        </div>
      </div>
      <div>
        <textarea id="message-input" placeholder="메시지를 입력하세요"></textarea>
        <button id="send-button" onclick="sendMessage()">전송</button>
      </div>
    </div>
  </div>

  <script>
    window.addEventListener('DOMContentLoaded', (event) => {
      adjustUserPosition();
      window.addEventListener('resize', adjustUserPosition);
    });

    function adjustUserPosition() {
      var topBar = document.getElementById('topBar');
      var userContainer = document.querySelector('.user-info');

      if (userContainer) {
          userContainer.style.marginLeft = '350px';
      }
    }

    var isChatListOpen = false;

    function showChatWindow(friend) {
      var chatWindow = document.getElementById('chat-window');

      chatWindow.style.display = 'block';

    }

    function sendMessage() {
    }

    function toggleChatList() {
      var sidebar = document.getElementById('sidebar');
      isChatListOpen = !isChatListOpen; // 토글

      if (isChatListOpen) {
        sidebar.style.display = 'block';
      } else {
        sidebar.style.display = 'none';
      }

      $(function () {
      $("#chat-window.resizable").resizable({
        handles: "se", 
        minHeight: 200,
        minWidth: 300, 
      });

      $(".draggable").draggable({
        handle: ".chat-bubble.user-message", 
      });
    });

    }
  </script>
</body>

</html>