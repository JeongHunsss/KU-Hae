    function toggleChatList() {
      var sidebar = document.getElementById('sidebar');
      isChatListOpen = !isChatListOpen; // 토글

      if (isChatListOpen) {
        sidebar.style.display = 'block';
      } else {
        sidebar.style.display = 'none';
      }

      $(function () {
      $("#chat-window.resizable").resizable({
        handles: "se", 
        minHeight: 200,
        minWidth: 300, 
      });

      $(".draggable").draggable({
        handle: ".chat-bubble.user-message", 
      });
    });

    }
  </script>
</body>

</html>
