<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css/top_bar.css">
  <title>top_bar</title>
</head>

<body>
  <div class="top-bar" id="topBar">
    <div class="logo">
      <a href="/">
        <img src="/images/ku.png" alt="KU">
      </a>
    </div>
    <div class="navigation">
      <div class="navigation1">
        <a href="/">홈</a>
        <a href="/notice_list">공지사항</a>
        <a href="/ku_list">팀 구하기</a>
      </div>
      <div class="navigation2">
        <a href="/post_list">공모전</a>
        <a href="/qna">QnA</a>
        <a href="/report_list">신고받은 페이지</a>
      </div>
    </div>
    <div class="user-info">
      <% if (typeof user !== 'undefined') { %>
        <% if (user) { %>
          <span><a href="/my_page"><%= user %></a>님 반갑습니다</span>
          <a href="/login/logout">로그아웃</a>
        <% } else { %>
          <a href="/login">로그인</a>
        <% }%>
      <% } else { %>
        <a href="/login">로그인</a>
      <% } %>
    </div>
    <div class="chat-container">
      <span class="chat-icon" onclick="toggleChat()">🧐</span>
    </div>
  </div>

  <div class="chat-box" id="chatBox">
    <!-- 채팅창 내용 -->
    채팅창이 여기에 나타납니다.
  </div>

  <script>
    window.addEventListener('DOMContentLoaded', (event) => {
      adjustUserPosition();
      window.addEventListener('resize', adjustUserPosition);
    });

    function adjustUserPosition() {
      var topBar = document.getElementById('topBar');
      var userContainer = document.querySelector('.user-info');

      if (userContainer) {
        if (isUserLoggedIn()) {
          userContainer.style.marginLeft = '90px';
        } else {
          userContainer.style.marginLeft = '350px';
        }
      }
    }

    function isUserLoggedIn() {
      // 여기에 로그인 여부를 확인하는 로직을 추가하세요
      // 예를 들어, 로그인된 경우에는 true를 반환하고, 그렇지 않으면 false를 반환하도록 구현
      return false; // 예시: 로그인되지 않은 상태
    }

    function toggleChat() {
      var chatBox = document.getElementById("chatBox");
      chatBox.style.display = (chatBox.style.display === "none" || chatBox.style.display === "") ? "block" : "none";
    }
  </script>
</body>

</html>
